@model IEnumerable<appGabrielMontoya.Models.FondoMonetario>

@{
    ViewData["Title"] = "Lista de Fondos Monetarios";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Fondo Monetario</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fondo in Model)
        {
            <tr>
                <td>@fondo.Nombre</td>
                <td>@fondo.Descripcion</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@fondo.FondoMonetarioId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@fondo.FondoMonetarioId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
