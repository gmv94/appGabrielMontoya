@model IEnumerable<appGabrielMontoya.Models.Presupuesto>

@{
    ViewData["Title"] = "Mis Presupuestos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tipo de Gasto</th>
            <th>Mes</th>
            <th>Año</th>
            <th>Monto</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TipoGasto.Nombre</td>
                <td>@item.Mes</td>
                <td>@item.Anio</td>
                <td>@item.Monto.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
