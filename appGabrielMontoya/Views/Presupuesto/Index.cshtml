@model IEnumerable<appGabrielMontoya.Models.Presupuesto>

@{
    ViewData["Title"] = "Mis Presupuestos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tipo de Gasto</th>
            <th>Mes</th>
            <th>Año</th>
            <th>Monto</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TipoGasto.Nombre</td>
                <td>@item.Mes</td>
                <td>@item.Anio</td>
                <td>@item.Monto.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.PresupuestoId" class="btn btn-info btn-sm">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.PresupuestoId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.PresupuestoId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
