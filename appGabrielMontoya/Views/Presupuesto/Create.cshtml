@model appGabrielMontoya.Models.Presupuesto

@{
    ViewData["Title"] = "Crear Presupuesto";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TipoGastoId"></label>
        <select asp-for="TipoGastoId" class="form-control" asp-items="ViewBag.TipoGastoId"></select>
        <span asp-validation-for="TipoGastoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mes"></label>
        <input asp-for="Mes" class="form-control" min="1" max="12" />
        <span asp-validation-for="Mes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Anio"></label>
        <input asp-for="Anio" class="form-control" min="2000" max="2100" />
        <span asp-validation-for="Anio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Monto"></label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
