@model appGabrielMontoya.Models.Presupuesto

@{
    ViewData["Title"] = "Eliminar Presupuesto";
}

<h2>@ViewData["Title"]</h2>

<h4>¿Estás seguro que deseas eliminar este presupuesto?</h4>

<dl class="row">
    <dt class="col-sm-3">Tipo de Gasto</dt>
    <dd class="col-sm-9">@Model.TipoGasto.Nombre</dd>

    <dt class="col-sm-3">Mes</dt>
    <dd class="col-sm-9">@Model.Mes</dd>

    <dt class="col-sm-3">Año</dt>
    <dd class="col-sm-9">@Model.Anio</dd>

    <dt class="col-sm-3">Monto</dt>
    <dd class="col-sm-9">@Model.Monto.ToString("C")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="PresupuestoId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
