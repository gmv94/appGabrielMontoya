@model appGabrielMontoya.Models.TipoGasto

@{
    ViewData["Title"] = "Eliminar Tipo de Gasto";
}

<h2>@ViewData["Title"]</h2>

<h4>¿Estás seguro que deseas eliminar este tipo de gasto?</h4>
<dl class="row">
    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Nombre</dd>

    <dt class="col-sm-3">Descripción</dt>
    <dd class="col-sm-9">@Model.Descripcion</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="TipoGastoId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
