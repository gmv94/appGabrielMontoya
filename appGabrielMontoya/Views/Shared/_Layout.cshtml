<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - appGabrielMontoya</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/appGabrielMontoya.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        @inject IHttpContextAccessor HttpContextAccessor

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">appGabrielMontoya</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="mantenimientosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Mantenimientos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="mantenimientosDropdown">
                                <li><a class="dropdown-item" asp-controller="TipoGasto" asp-action="Index">Tipos de Gasto</a></li>
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Index">Usuarios</a></li>
                                <li><a class="dropdown-item" asp-controller="FondoMonetario" asp-action="Index">Fondo Monetario</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="movimientosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Movimientos
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="movimientosDropdown">
                                <li><a class="dropdown-item" asp-controller="Presupuesto" asp-action="Index">Presupuesto por Usuario</a></li>
                                <li><a class="dropdown-item" asp-controller="GastoEncabezado" asp-action="Index">Registros de Gastos</a></li>
                                <li><a class="dropdown-item" asp-controller="Deposito" asp-action="Index">Depósitos</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="reportesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Consultas y Reportes
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="reportesDropdown">
                                <li><a class="dropdown-item" asp-controller="ConsultaMovimientos" asp-action="Index">Consulta de Movimientos</a></li>
                                <li><a class="dropdown-item" asp-controller="GraficoComparativo" asp-action="Index">Gráfico Comparativo</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        @if (HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre") != null)
        {
            <div id="divLogin">
                <span class="nav-link text-dark">
                    👤 @HttpContextAccessor.HttpContext.Session.GetString("UsuarioNombre")
                </span>
                <a class="nav-link text-danger d-flex align-items-center" asp-controller="Login" asp-action="Logout" title="Cerrar sesión">
                    <img src="~/img/cerrar-sesion.svg" />
                </a>
            </div>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - appGabrielMontoya - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
